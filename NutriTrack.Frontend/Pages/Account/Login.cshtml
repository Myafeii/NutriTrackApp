@page
@model NutriTrack.Frontend.Pages.Account.LoginModel

<h2>Login (Prototype)</h2>
<p class="text-muted">Enter the UID (from registration). This prototype uses Session login.</p>

<form method="post" class="mt-3">
    <div class="mb-3">
        <label class="form-label">UID</label>
        <input class="form-control" asp-for="Uid" required />
    </div>

    <button class="btn btn-primary">Login</button>
    <a class="btn btn-link" href="/Account/Register">Register</a>

    @if (!string.IsNullOrEmpty(Model.Error))
    {
    <div class="alert alert-danger mt-3">@Model.Error</div>
    }
</form>
