@page
@model NutriTrack.Frontend.Pages.Account.RegisterModel

<h2>Register</h2>
<p class="text-muted">Creates a Firebase user through the backend and logs you in using the returned UID.</p>

<form method="post" class="mt-3">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input class="form-control" asp-for="Name" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input class="form-control" asp-for="Email" type="email" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <input class="form-control" asp-for="Password" type="password" required />
    </div>

    <button class="btn btn-success">Create Account</button>
    <a class="btn btn-link" href="/Account/Login">Back to Login</a>

    @if (!string.IsNullOrEmpty(Model.Error))
    {
    <div class="alert alert-danger mt-3">@Model.Error</div>
    }
</form>
